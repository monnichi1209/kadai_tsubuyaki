<h1>過去のつぶやき</h1>
<br>
<table>
  <tr>
    <th>こんなことつぶやいてたよ</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= link_to '見る', post %></td>
    <td><%= link_to '変える', edit_post_path(post) %></td>
    <td><%= link_to '消す', post, method: :delete, data: { confirm: '本当に消しちゃうの?' } %></td>
  </tr>
<% end %>
</table>

<br>

